{
  "name": "native-touchbar",
  "version": "0.1.0",
  "main": "index.js",
  "author": "viktorstrate <viktorstrate@gmail.com>",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "start": "parcel src/background.js src/popup.html src/touchbarScriptAPI.js",
    "launch": "web-ext run -s ./dist",
    "build": "rm -rf dist/ && parcel build src/background.js src/popup.html src/touchbarScriptAPI.js && web-ext build -s ./dist",
    "lint": "rm -rf dist/ && parcel build src/background.js src/popup.html src/touchbarScriptAPI.js && web-ext lint -s ./dist"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "eslint": "^7.13.0",
    "eslint-plugin-react": "^7.21.5",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "parcel-plugin-text": "^0.9.7",
    "prettier": "^2.1.2",
    "react-router-dom": "^5.2.0",
    "web-ext": "^5.3.0"
  },
  "dependencies": {
    "parcel-bundler": "^1.12.4",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-router": "^5.2.0",
    "styled-components": "^5.2.1",
    "uuid": "^8.3.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "webextensions": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "rules": {
      "react/prop-types": "off",
      "no-unused-vars": "warn"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "parcel-plugin-text": {
    "extensions": [
      "txt",
      "touchbar-packet"
    ]
  }
}
